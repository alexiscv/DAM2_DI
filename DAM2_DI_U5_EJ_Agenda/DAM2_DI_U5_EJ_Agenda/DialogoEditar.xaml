<Window x:Class="DAM2_DI_U5_EJ_Agenda.DialogoEditar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DialogoEditar" Height="325" Width="323">
    <Grid>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Descripción" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Fecha inicio" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Nombre}" x:Name="nombre" Height="23" Margin="103,14,8,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Texto}" x:Name="texto" Height="23" Margin="103,45,8,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <DatePicker SelectedDate="{Binding Fecha}" x:Name="fecha" Margin="103,74,8,0" VerticalAlignment="Top"/>
        <Button x:Name="botonEliminar" Content="ELIMINAR" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" Width="96" Click="botonEliminar_Click"/>
        <Button x:Name="botonGuardar" Content="GUARDAR" Margin="111,124,10,0" VerticalAlignment="Top" Click="botonGuardar_Click"/>

    </Grid>
</Window>
